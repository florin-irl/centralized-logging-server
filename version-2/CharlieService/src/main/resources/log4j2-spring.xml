<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG"> <!-- DEBUG so we can see if Log4j2 loads properly -->
    <Properties>
        <Property name="LOG_PATH">logs/charlie</Property>
    </Properties>

    <Appenders>
        <!-- âœ… Console JSON -->
        <Console name="Console" target="SYSTEM_OUT">
            <JsonTemplateLayout eventTemplateUri="classpath:Log4j2JsonTemplate.json"/>
        </Console>

        <!-- âœ… Rolling JSON File -->
        <RollingFile name="FileAppender"
                     fileName="${LOG_PATH}/charlie.jsonl"
                     filePattern="${LOG_PATH}/charlie-%d{yyyy-MM-dd}.jsonl.gz"
                     immediateFlush="true"> <!-- ðŸ”¥ force flushing -->
            <JsonTemplateLayout eventTemplateUri="classpath:Log4j2JsonTemplate.json"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>
